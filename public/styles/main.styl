.section-container
	padding-top 3rem
	padding-bottom 5rem
	text-align center

.btn-section
	line-height: 1
	padding 1.5rem
	border-radius: 20%

.section-buttons
	margin-top 3rem

.btn-card-icon
	line-height 1
	padding 0.25rem
	border-radius: 20%
	font-size 0.75rem
	margin 2px
	width 22px

.cpointer
	cursor: pointer

.card-simple
	padding-right 4.75rem
	white-space: nowrap
	text-overflow: ellipsis
	overflow hidden
	.card-title
		margin-bottom 0rem
		white-space: nowrap
		text-overflow: ellipsis
		overflow hidden
		line-height: 1.4
		a
			color inherit
	p
		margin-bottom 0px

.card-timeline
	height: 16px
	.timeline-container
		height 16px
	.progress
		background-color #343a40
		color white
		border-radius: 0rem 0rem 0.25rem 0.25rem
		position: absolute
		width: calc(100% + 2px)
		left: -1px
		span
			padding-left 1.25rem
			position: absolute
		.progress-bar
			height: 17px
			line-height: 15px

.card-container
	margin-top: 1.5rem
	.card
		margin-top 15px
		margin-bottom 15px

.card
	.card-icons
		position absolute
		right 5px
		top 5px
		width 52px
		text-align right

.card-date
	padding-left 1.25rem
	padding-right 1.25rem
	border-radius 0rem 0rem 0.25rem 0.25rem
	color white
	position: absolute
	bottom: -1px
	left: -1px
	width: calc(100% + 2px)

.card-date-sepperator
	height 1rem

#addon_courseEnd, #addon_courseStart
	width 95px

.alert p:last-child
	margin-bottom 0px

.errors
	margin-bottom 0

.bug1
	font-size 4rem

.bug2
	font-size 3rem

.bug3
	font-size 2rem

.bug4
	font-size 1rem

.bug5
	font-size 0.75rem

.bug6
	font-size 0.5rem

.bug7
	font-size 0.25rem

.collapse-button
	transition: transform 0.4s
	transform rotate(180deg)

.collapse-button.collapsed
	transform rotate(0deg)

